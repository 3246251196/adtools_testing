FAILAT 21
; Used to warn about the molestation of the LIBS: assign
SETENV LIBSWARNED 0

CD tests
SET ts `LIST DIRS QUICK NOHEAD`
FOREACH t IN ${ts}
	CD ${t}
	SET vs `LIST FILES LFORMAT="%M"`
	FOREACH v IN ${vs}
		LHA -q -t x ${v} ${v}/
		CD ${v}
		; You should check the user.script
		EXECUTE //user.script
		CD /
	END
	UNSET vs
	CD /
END
UNSET ts
CD /

UNSETENV LIBSWARNED
